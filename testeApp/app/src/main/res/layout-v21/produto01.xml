<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:visibility="visible"
            android:src="@drawable/leitecopo"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Código da empresa"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:hint="Nome"
           android:layout_gravity="center" />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/btnCredito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crédito"/>

            <RadioButton
                android:id="@+id/btnDebito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Débito"/>

        </RadioGroup>

        <CheckBox
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Usuário ativo" />



        <RelativeLayout
            android:layout_width="127dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/subt"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/quantidad"
                android:layout_gravity="center"
                android:text="-"
                android:onClick="subtrair"/>


            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantidad"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/quantidade_tv"
                android:text="+"
                android:onClick="somar"/>

            <TextView
                android:id="@+id/quantidade_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantidad"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/subt"
                android:text="0"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/quantidad"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Quantidade"
                android:gravity="center"/>

        </RelativeLayout>
        <EditText
        android:id="@+id/editValor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"
        android:hint="Valor R$"
        android:layout_gravity="center"/>

        <TextView
            android:id="@+id/valorFinal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="0.00"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />


        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="Gravar"
            android:onClick="onClick"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>

</ScrollView>